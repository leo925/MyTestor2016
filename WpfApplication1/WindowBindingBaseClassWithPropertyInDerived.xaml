<Window x:Class="WpfApplication1.WindowBindingBaseClassWithPropertyInDerived"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1" Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="WindowBindingBaseClassWithPropertyInDerived" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Width="300" Text="{Binding VM.Name}"></TextBox>
            <TextBox Width="300"  Text="{Binding VM.Name2}" ></TextBox>
        </StackPanel>
    </Grid>
</Window>
